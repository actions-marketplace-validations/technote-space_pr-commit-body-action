{
  "name": "@technote-space/pr-commit-body-action",
  "version": "1.7.1",
  "description": "GitHub action to add commit history to PR body.",
  "keywords": [
    "github",
    "github actions"
  ],
  "homepage": "https://github.com/technote-space/pr-commit-body-action",
  "bugs": {
    "url": "https://github.com/technote-space/pr-commit-body-action/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/technote-space/pr-commit-body-action.git"
  },
  "license": "MIT",
  "author": {
    "name": "Technote",
    "email": "technote.space@gmail.com",
    "url": "https://technote.space"
  },
  "files": [
    "lib",
    "action.yml"
  ],
  "scripts": {
    "build": "rm -rdf lib && rollup -c",
    "cover": "vitest run --coverage",
    "postinstall": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/husky ] || husky install",
    "lint": "eslint 'src/**/*.ts' --cache",
    "lint:fix": "eslint --fix 'src/**/*.ts'",
    "prepublishOnly": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/pinst ] || pinst --disable",
    "postpublish": "[ -n \"$CI\" ] || [ ! -f node_modules/.bin/pinst ] || pinst --enable",
    "release": "yarn release-ga --test",
    "test": "yarn lint && yarn typecheck && yarn cover",
    "typecheck": "tsc --noEmit",
    "update": "npm_config_yes=true npx npm-check-updates -u --timeout 100000 && yarn install && yarn upgrade && yarn audit"
  },
  "devDependencies": {
    "@actions/core": "^1.8.0",
    "@actions/github": "^5.0.1",
    "@commitlint/cli": "^16.2.4",
    "@commitlint/config-conventional": "^16.2.4",
    "@octokit/openapi-types": "^11.2.0",
    "@octokit/plugin-paginate-rest": "^2.17.0",
    "@octokit/plugin-rest-endpoint-methods": "^5.13.0",
    "@octokit/types": "^6.34.0",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^13.3.0",
    "@rollup/plugin-typescript": "^8.3.2",
    "@sindresorhus/tsconfig": "^2.0.0",
    "@technote-space/filter-github-action": "^0.6.1",
    "@technote-space/github-action-helper": "^5.3.5",
    "@technote-space/github-action-log-helper": "^0.2.4",
    "@technote-space/github-action-test-helper": "^0.9.5",
    "@technote-space/github-action-version-helper": "^0.6.3",
    "@technote-space/release-github-actions-cli": "^1.9.0",
    "@types/node": "^17.0.31",
    "@typescript-eslint/eslint-plugin": "^5.22.0",
    "@typescript-eslint/parser": "^5.22.0",
    "c8": "^7.11.2",
    "eslint": "^8.15.0",
    "eslint-plugin-import": "^2.26.0",
    "husky": "^7.0.4",
    "lint-staged": "^12.4.1",
    "nock": "^13.2.4",
    "pinst": "^3.0.0",
    "rollup": "^2.72.1",
    "typescript": "^4.6.4",
    "update-section": "^0.3.3",
    "vitest": "^0.12.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
